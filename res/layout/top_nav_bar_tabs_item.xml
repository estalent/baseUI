<?xml version="1.0" encoding="utf-8"?>
<io.viva.tv.app.TabFrame xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leftnav_bar_tab"
    style="@style/Widget.ActionBarView_TabView"
    android:layout_width="@dimen/top_nav_tabs_item_width"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="20.0dip"
    android:paddingTop="14.0dip" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            style="@style/Widget.ActionBarView_TabText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="6.0dip" />

        <io.viva.tv.app.widget.NumberIndicator
            android:id="@+id/numberIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </FrameLayout>

</io.viva.tv.app.TabFrame>