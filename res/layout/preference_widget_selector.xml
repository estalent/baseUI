<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aui_status_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/aui_margin_2"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tui_ic_selector_leftarrow"
        android:duplicateParentState="true" />

    <TextView
        android:id="@+id/tui_selector_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/aui_margin_2"
        android:layout_marginRight="@dimen/aui_margin_2"
        android:gravity="center"
        android:maxWidth="@dimen/aui_listview_status_max_width"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tui_ic_selector_rightarrow"
        android:duplicateParentState="true" />

</LinearLayout>